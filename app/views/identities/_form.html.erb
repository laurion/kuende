<div class="modal hide fade" id="signup-modal">
  <%= form_tag "/auth/identity/register" do %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  		<h3>Create Your Account</h3>
    </div>
  
    <div class="modal-body">
      <% if @identity && @identity.errors.any? %>
        <div class="error_messages">
          <h2><%= pluralize(@identity.errors.count, "error") %> prohibited this account from being saved:</h2>
          <ul>
          <% @identity.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  
      <div class="login-fields">
  			<p>Create your free account:</p>

        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, @identity.try(:email), :placeholder => "Email address", :class => "login" %>
  			</div> <!-- /field -->

  			<div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password, "", :placeholder => "Password", :class => "login" %>
  			</div> <!-- /field -->

        <div class="field">
          <%= label_tag :password_confirmation %>
          <%= password_field_tag :password_confirmation, "", :placeholder => "Password confirmation", :class => "login" %>
  			</div> <!-- /field -->
      </div> <!-- /login-fields -->

      <div class="login-actions">
        <span class="login-checkbox">
  				<input id="Field" name="Field" type="checkbox" class="field login-checkbox" value="First Choice" tabindex="4" />
  				<label class="choice" for="Field">I have read and agree with the Terms of Use.</label>
        </span>
  		</div> <!-- .actions -->
    </div>
    
    <!-- Text Under Box -->
    <div class="modal-footer">
      <%= submit_tag "Register", :class => "kd-btn green large" %>
      
    	Already have an account? <%= link_to "Sign in",  signin_url %><br/>
    	Reset <a href="#">Password</a>
    </div> <!-- /modal-footer -->
  <% end%>
</div>